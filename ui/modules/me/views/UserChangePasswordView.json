{
	"name": "userChangePasswordView",
	"displayName": "Change Password",
	"type": "editFormView",
	"permission": "cubi-myaccount-manage",
	"model": "Me",
	"fields": [
		{
			"name": "oldPassword",
			"field": "oldPassword",
			"displayName": "Old Password",
			"placeholder": "Old Password",
			"type": "password",
			"validator":" parsley-remote-method=\"POST\",parsley-remote-message=\"{{ locale.validation.incorrectPassword }}\" ",
			"required":true
		},
		{
			"name": "newPassword",
			"field": "newPassword",
			"displayName": "New Password",
			"placeholder": "New Password",
			"type": "password",
			"validator":"parsley-mincheck=\"6\", parsley-trigger=\"change\" ",
			"required":true
		},
		{
			"name": "repeatPassword",
			"field": "",
			"displayName": "Repeat Password",
			"placeholder": "Repeat Password",
			"type": "password",
			"validator":"parsley-mincheck=\"6\", parsley-trigger=\"change\",parsley-equalto=\"#inputPassword\",parsley-equalto-message=\"{{ locale.validation.passwordNotMatch }}\"",
			"required":true
		}
	],
	"actions": [
		{
			"name": "saveRecord",
			"displayName": "保存",
			"type": "button",
			"event": "click",
			"function": "saveRecord",
			"className": "btn-theme x-large",
			"icon": ".fa.fa-check"
		}
	],
	"comment": "APPBUILDER_ALLOW_OVERRIDE = NO // if you have manual modified this file please change APPBUILDER_ALLOW_OVERRIDE value to NO"
}